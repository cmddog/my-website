shiru.dog {
  @wellknown_server path /.well-known/matrix/server
  handle @wellknown_server {
                             header Content-Type application/json
                             respond `{"m.server":"matrix.shiru.dog:443"}` 200
                           }

  @wellknown_client path /.well-known/matrix/client
  handle @wellknown_client {
                             header Content-Type application/json
                             respond `{"m.homeserver":{"base_url":"https://matrix.shiru.dog"},"m.server":"matrix.shiru.dog:443","org.matrix.msc3575.proxy":{"url":"https://matrix.shiru.dog"}}` 200
                           }

  root * /var/www/html
  file_server
  try_files {path} /index.html
}

matrix.shiru.dog {
  reverse_proxy homeserver:6167
}
